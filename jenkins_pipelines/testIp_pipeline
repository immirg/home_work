pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'lesson31', url: 'https://github.com/immirg/home_work.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh '''
                    #!/bin/bash
                    apt-get update
                    apt-get install -y python3 python3-dev
                    apt install -y python3-pip
                    rm -rf venv
                    apt install -y python3.11-venv
                    python3 -m venv venv
                '''
            }
        }
        stage('Install requirements') {
            steps {
                sh '''
                    #!/bin/bash
                    . venv/bin/activate
                    pip install -r requirements.txt
                '''
            }
        }
        stage('Run tests') {
            steps {
                sh '''
                    #!/bin/bash
                    . venv/bin/activate
                    pytest -m testIp --alluredir=allure-results
                '''
            }
        }
    }
    post {
        always {
            allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
        }
    }
}
